{
  "manifest_version": 2,

  "name": "Crisp Chrome",
  "description": "See if an email address is on Ongair",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "webNavigation"
  ],
  "background": {
    "persistent": false,
    "scripts": ["jquery-1.9.1.min.js", "ongair.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-1.9.1.min.js", "email.js"]
    }
  ],
  "web_accessible_resources": ["email.js"]
}